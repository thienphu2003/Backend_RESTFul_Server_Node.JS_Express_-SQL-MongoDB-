<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update A User</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="topnav">
      <a href="/">Home</a>
      <a href="/create">Create</a>
      <!-- <a href="#contact">Contact</a>
      <a href="#about">About</a> -->
    </div>
    <div class="form">
      <form action="/create_user" method="POST">
        <fieldset>
          <legend>Update a user</legend>
          <div class="input-group">
            <label>Email:</label>
            <input
              type="text"
              id="emailId"
              name="email"
              value="<%= user.email %>"
            />
          </div>
          <div class="input-group">
            <label>Name:</label>
            <input
              type="text"
              id="nameId"
              name="name"
              value="<%= user.name %>"
            />
          </div>
          <div class="input-group">
            <label>City:</label>
            <input
              type="text"
              id="cityId"
              name="city"
              value="<%= user.city %>"
            />
          </div>
          <div>
            <button type="submit">Save</button>
          </div>
        </fieldset>
      </form>
    </div>
  </body>
</html>
